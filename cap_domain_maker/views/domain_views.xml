<?xml version="1.0"?>
<odoo>
    <record id="domain_configurator_view_form" model="ir.ui.view">
        <field name="name">domain.configurator.form</field>
        <field name="model">domain.configurator</field>
        <field name="arch" type="xml">
            <form string="Domain">
                <sheet>
                    <div>
                        <h1>
                            <label for="model_id">Model</label>
                            <field name="model_id"/>
                        </h1>
                        <group>
                            <group>
                                <field
                                    name="target_field_id"
                                    string="Target Field"
                                    invisible="1"
                                    domain="[('model_id', '=', model_id)]"
                                    />
                            </group>
                            
                        </group>
                                
                    </div>
                    
                    <group>
                        <field name="search_model"/>
                        <field name="search_domain" widget="domain" options="{'model': 'search_model'}"/>
                        <field name="question_title"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="domain_configurator_view_tree" model="ir.ui.view">
        <field name="name">domain.configurator.tree</field>
        <field name="model">domain.configurator</field>
        <field name="arch" type="xml">
            <list string="Domain">
                <field name="model_id"/>
            </list>
        </field>
    </record>
</odoo>